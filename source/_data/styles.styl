header.post-header {
    & > h1.post-title {
        text-align: left; 
    }
        
    & > div.post-meta {
        text-align: left; 
    }
}

header.post-header > h1.post-title,
header.post-header > h2.post-title {
    font-size: 1.8rem;
    margin-bottom: 0.5em;
    text-align: left;
}

article div.post-body > div.post-button {
    text-align: right;
}

@media (min-width: 1200px) {
    article div.post-body {
        font-size: 1em;
    }
}

footer.post-footer > div.post-tags {
    text-align: left;
}

div.category-all-page > div.category-all-title {
    text-align: left;
}

div.tag-cloud {
    text-align: left;
}

div.post-body div.note {
    & > h2, 
    & > h3,
    & > h4,
    & > h5,
    & > h6 {
        margin-bottom: 0.5em;
    }
}

article.post div.post-body a:not(.btn),
article.post div.post-body span.exturl {
    color: $link-color-article;
    border-bottom: 1px solid $link-decoration-color-article;

    &:hover {
        color: $link-hover-color-article;
        border-bottom-color: $link-decoration-hover-color-article;
    }
}

.post-body .tabs ul.nav-tabs li.tab.active {
    border-top-color: $link-color-article;

    +mobile-smallest() {
        border-top-color: $table-border-color;
        border-left-color: $link-color-article;
    }
}

.post-body {
    & > h1:before {
        content: "# ";
        color: $border-color;
        opacity: 0.75;
    }

    & > h2:before {
        content: "## ";
        color: $border-color;
        opacity: 0.75;
    }

    & > h3:before {
        content: "### ";
        color: $border-color;
        opacity: 0.75;
    }

    & > h4:before {
        content: "#### ";
        color: $border-color;
        opacity: 0.75;
    }
}

span[lang="ja"] {
    font-family: "Lucida", "Meiryo", sans-serif;
}
